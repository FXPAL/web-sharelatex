li
	a(
		href,
		ng-click="openImportModal()",
		ng-controller="GithubSyncMenuEntryController"
	) #{translate("import_from_github")}
	
script(type="text/ng-template", id="githubSyncImportModalTemplate")

	.modal-header
		button.close(
			type="button"
			data-dismiss="modal"
			ng-click="cancel()"
		) &times;
		h3 #{translate("import_project_from_github")}
	.modal-body
		.alert.alert-danger(ng-show="status.error") #{translate("github_sync_error")}

		.loading(ng-show="!status.error && status.loading")
			i.fa.fa-refresh.fa-spin.fa-fw
			span  #{translate("please_wait_while_we_load_your_github_repositories")}
		
		div(ng-if="status.repos")
			p.text-center Select a GitHub repository to import into ShareLaTeX.
			table.table.table-striped
				tbody
					tr(ng-repeat="repo in status.repos")
						td
							a(href, ng-click="importProject(repo)") {{ repo.full_name }}

	.modal-footer()
		button.btn.btn-default(
			ng-click="cancel()",
		)
			span #{translate("cancel")}