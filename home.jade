link(rel='canonical', href='https://www.sharelatex.com')

extends ../layout

block content
	.masthead
		.container
			.row
				.col-md-12
					h1 LaTeX, 
						span #{translate("evolved")}
					p #{translate("the_easy_online_collab_latex_editor")}
			.row
				.col-md-12
					.screenshot
						.img

		.register-banner
			.container
				.row
					.col-md-12
						h2 #{translate("get_started_now")}
						form.form-inline(async-form="register", name="registerForm", action="/register", ng-cloak)
							input(name='_csrf', type='hidden', value=csrfToken)
							input(name='redir', type='hidden', value=redir)
							form-messages(for="registerForm")
							.form-group
								input.form-control.input-lg(
									type='email',
									name='email',
									placeholder="email@example.com"
									required,
									ng-model="email",
									ng-init="email = #{JSON.stringify(new_email)}",
									ng-model-options="{ updateOn: 'blur' }"
								)
							.form-group
								input.form-control.input-lg(
									type='password',
									name='password',
									placeholder="********",
									required,
									ng-model="password"
								)
							.form-group
								button.btn-primary.btn.btn-lg.btn-hero(
									type='submit'
									ng-disabled="registerForm.inflight"
								)
									span(ng-show="!registerForm.inflight") #{translate("register")}
									span(ng-show="registerForm.inflight") #{translate("registering")}...

	.universities.hidden-xs.hidden-sm
		.container
			.row.row-spaced-small
				div.small !{translate("sl_used_over_x_people_at", {numberOfUsers:"<strong>1,000,000</strong>"})}
				#slides.container-fluid
					.row.row-spaced
						.col-xs-3
							img(src=buildImgPath("crests/harvard.gif"), alt="harvard university logo")
						.col-xs-3
							img(src=buildImgPath("crests/mit.gif"), alt="mit university logo")
						.col-xs-3
							img(src=buildImgPath("crests/oxford.gif"), alt="oxford university logo")
						.col-xs-3
							img(src=buildImgPath("crests/tokyo.png"), alt="tokyo university logo")
					.row.row-spaced(style="display: none;")
						.col-xs-3
							img(src=buildImgPath("crests/cambridge.png"), alt="cambridge university logo")
						.col-xs-3
							img(src=buildImgPath("crests/liverpool.jpg"), alt="liverpool university logo")
						.col-xs-3
							img(src=buildImgPath("crests/icl.png"), alt="icl university logo")
						.col-xs-3
							img(src=buildImgPath("crests/yale.png"), alt="yale university logo")
					.row.row-spaced(style="display: none;")
						.col-xs-3
							img(src=buildImgPath("crests/durham.png"), alt="durham university logo")
						.col-xs-3
							img(src=buildImgPath("crests/nasa.png"), alt="nasa university logo")
						.col-xs-3
							img(src=buildImgPath("crests/toronto.gif"), alt="toronto university logo")
						.col-xs-3
							img(src=buildImgPath("crests/stanford.png"), alt="stanford university logo")

	.pattern-container
		.container
			.long-form-features
				.row
					script(type="text/javascript").
						var frames = [{
							before: "",
							time: 1000
						}, {
							before: "i",
							time: 100
						}, {
							before: "in",
							time: 200
						}, {
							before: "in ",
							time: 300
						}, {
							before: "in r",
							time: 100
						}, {
							before: "in re",
							time: 200
						}, {
							before: "in rea",
							time: 100
						}, {
							before: "in real",
							time: 200
						}, {
							before: "in real ",
							time: 400
						}, {
							before: "in real t",
							time: 200
						}, {
							before: "in real ti",
							time: 100
						}, {
							before: "in real tim",
							time: 200
						}, {
							before: "in real time",
							time: 2000
						}];
						var index = 0;
						function nextFrame() {
							var frame = frames[index];
							index = index + 1;
							if (index >= frames.length) {
								index = 0;
							}
							$(".real-time-example").html(frame.before + "<div class='cursor'>|</div>");
							setTimeout(nextFrame, frame.time);
						}
						nextFrame();
						
					.col-md-6
						.card.row-spaced
							.row
								.col-md-3.col-xs-2.text-center
									i.fa.fa-group.fa-4x
								.col-md-9.col-xs-10
									h2.h1 #{translate("collaboration")}
									p #{translate("work_on_single_version")} 
									p #{translate("view_collab_edits")} 
										span.real-time-example
										
					.col-md-6
						.card.row-spaced
							.row
								.col-md-3.col-md-push-9.col-xs-2.text-center
									i.fa.fa-thumbs-up.fa-4x
								.col-md-9.col-md-pull-3.col-xs-10
									h2.h1 #{translate("ease_of_use")}
									p #{translate("no_complicated_latex_install")}
									p !{translate("all_packages_and_templates", {templatesLink:"<a href='templates'>__templates__</a>", templates: translate("templates") })} 

				.row
					.col-md-6
						.card.row-spaced
							.row
								.col-md-3.col-xs-2.text-center
									i.fa.fa-history.fa-4x
								.col-md-9.col-xs-10
									h2.h1 #{translate("document_history")}
									p.track-changes-example #{translate("see_what_has_been")}
										span.added #{translate("added")}
										|  #{translate("and")} 
										span.removed #{translate("removed")}
									p #{translate("restore_to_any_older_version")}

					.col-md-6
						.card.row-spaced
							.row
								.col-md-3.col-md-push-9.col-xs-2.text-center
									i.fa.fa-globe.fa-4x
								.col-md-9.col-md-pull-3.col-xs-10
									h2.h1 #{translate("work_from_anywhere")}
									p #{translate("acces_work_from_anywhere")}
									p #{translate("work_offline_and_sync_with_dropbox")}
									
			.row.row-spaced
				.col-md-12
					p.text-center
						a(href="/user/subscription/plans").btn.btn-primary.btn-lg #{translate("sign_up_now")}!
						
			.row-spaced
	.content.content-alt
		.container
			.card
				.page-header
					h2 #{translate("ease_of_use")}
				
				.row.row-spaced
					.col-md-12
						.col-md-4.pull-right
							.alert.alert-info 
								p !{translate("over_x_templates_easy_getting_started", {numberoftemplates:"<strong>__over__ 500 __templates__</strong>", over:translate("over"), templates:translate("templates")})}

								p.text-center
									a(href="/templates").btn.btn-info #{translate("view_templates")}
							p &nbsp;
						p !{translate("nothing_to_install_ready_to_go", {start_now:"<strong>__start_now_text__</strong>", start_now_text:translate("start_using_latex_now")})}

						p #{translate("get_same_latex_setup")}
						p !{translate("support_lots_of_features", {help_guides_link:"<a href='/learn'>__latex_guides__</a>", latex_guides:translate("latex_guides")})}.
					.col-md-6
					
			.card.row-spaced
				.page-header
					h2 #{translate("collaboration")}
				
				.row.row-spaced
					.col-md-12
						blockquote 
							p Waiting for changes to be emailed back before carrying on wastes a huge amount of time. 
								strong The ability to track changes and the real-time collaborative nature is what sets ShareLaTeX apart.
							footer Professor Erdogmus, Northeastern University.
							
				.row
					.col-md-8
						p
							| #{translate("single_version_easy_collab_blurb")}
						p
							| #{translate("can_see_collabs_type_blurb")}
					.col-md-4
						.real-time-example-code
							span.highlight \begin
							| {document}
							br
							br
							| #{translate("work_directly_with_collabs")} 
							span.real-time-example
							br
							br
							span.highlight \end
							| {document}
							
				h3 #{translate("work_with_word_users")}
				.row
					.col-md-12
						p #{translate("work_with_word_users_blurb")}
				
			.card.row-spaced
				.page-header
					h2 #{translate("document_history")}
				
				.row.row-spaced
					.col-md-4
						.real-time-example-code.track-changes-example
							span.highlight \begin
							| {document}
							br
							br
							| #{translate("view_which_changes")} 
							span.added #{translate("added")}
							|  #{translate("and")} 
							span.removed #{translate("removed")}
							| .
							br
							br
							span.highlight \end
							| {document}
					.col-md-8
						p #{translate("sl_included_history_of_changes_blurb")}
						p #{translate("can_revert_back_blurb")}
						
							
			.row.row-spaced.text-center
				a(href="/user/subscription/plans").btn.btn-primary.btn-lg #{translate("start_using_sl_now")}
				
			.row-spaced
				

	script(src=buildJsPath("libs/jquery.slides.min.js", {fingerprint:false}))
	script(type="text/javascript").
		$(function() {
			$('#slides').slidesjs({
				height: 80,
				play: {
					active: false,
					auto: true,
					interval: 5000
				},
				navigation: {
					active: false
				},
				pagination: {
					active: false
				}
			});
		});
