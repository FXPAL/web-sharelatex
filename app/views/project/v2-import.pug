			if hasOwner
				form.v2-import__form(
					async-form="v2Import"
					name="v2ImportForm"
					action="/overleaf/project/"+ projectId + "/import"
					method="POST"
					ng-cloak
				)
					input(name='_csrf', type='hidden', value=csrfToken)
					form-messages(for="v2ImportForm")
