span(ng-controller="ReferencesSearchController")

script(type="text/ng-template", id="referencesSearchModalTemplate")
	.modal-header
		button.close(
			type="button"
			data-dismiss="modal"
			ng-click="cancel()"
		) &times;
		h3 #{translate("search_references")}
	.modal-body.references-search-modal
		.row
			.col-md-12
				form(navalidate, name="referencesSearchForm").form-inline.search-form
						input.form-control.text-monospace(
							ng-model="state.queryText",
							placeholder="Search references...",
							on-enter="doSearch()",
							focus-on="open",
							autocomplete="off"
						)
						button(
							ng-click="doSearch()"
							ng-disabled="currentlySearching"
						).btn.btn-primary.search-button.pull-right
							| Search
		div(ng-show="state.searchResults").row.search-results
			.col-md-12
				div(ng-repeat="hit in state.searchResults").hit
					| {{hit.Fields.title}}

	
	.modal-footer()
		button.btn.btn-primary(
			ng-click="accept()"
		)
			span #{translate("ok")}
		button.btn.btn-default(
			ng-click="cancel()",
		)
			span #{translate("dismiss")}