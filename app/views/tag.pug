						a(href=tag.tagPagePath)  #{tag.name}
				- for (var row = 0; row <= Math.floor(templates.length / 4); row++)
					.row
						- for (var column = 0; column < 4; column++)
							- if (templates[row*4 + column])
								.col-md-3
									+template(templates[row*4 + column])
