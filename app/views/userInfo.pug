extends ../../../../app/views/layout

block content
	script#data(type="application/json").
		!{JSON.stringify({user: user, projects: projects}).replace(/\//g, '\\/')}

	script(type="text/javascript").
		window.data = JSON.parse($("#data").text());

	.content.content-alt(ng-controller="AdminProjectController")
		.container(ng-cloak)
			.row
				aside.col-md-3.col-xs-3
					include ./user/side-info

				.col-md-9.col-xs-9
					include ./user/project-list

		include ../../../../app/views/project/list/modals
		include ./user/modals