extends ../../../../app/views/layout

block content
	.content.content-alt
		.container
			.row
				.col-md-4.col-md-offset-4
					.card
						.page-header
							h2 Grant Overleaf access
						p.text-center
							img(
								src="/img/ol_plus_sl.png"
								style="width: 50%"
							)
						p
							| Overleaf would like to link with your ShareLaTeX account. This will allow you to:
							ul
								li Work with your ShareLaTeX projects in the new Overleaf editor
								li Include any upgrades from Overleaf on your ShareLaTeX account
						hr
						if (logged_in_user_id && logged_in_user_id == merge_user_id)
							form(async-form="confirm", name="confirmForm", action='/user/confirm_account_merge', method="POST", ng-cloak)
								input(name='_csrf', type='hidden', value=csrfToken)
								input(name='token', type="hidden", value=token)
								p.text-center
									button.btn-primary.btn(
										type='submit',
										ng-disabled="confirmForm.inflight"
									)
										span(ng-show="!confirmForm.inflight") Grant Overleaf Access
										span(ng-show="confirmForm.inflight") Submitting...
						else
							p.text-center
								a(href="/login?redir=" + encodeURIComponent("/user/confirm_account_merge?token=" + token) + "&email=" + encodeURIComponent(overleaf_email))
									| Log in with #{overleaf_email} to confirm

