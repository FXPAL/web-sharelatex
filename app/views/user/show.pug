	script(type="text/javascript").
		window.data = JSON.parse($("#data").text());

	.content.content-alt(ng-controller="AdminUserController")
		.container(ng-cloak)
			.row
				aside.col-md-4
					include ./_user-info

				.col-md-8
					include ./_project-list

		include ../../../../../app/views/project/list/modals
		include ./_modals