extends ../../../../app/views/layout

block content
	.content.content-alt
		.container
			.row
				.col-md-6.col-md-offset-3
					.card
						.page-header
							h1 ShareLaTeX is migrating To Overleaf v2

						div
							p
								| ShareLaTeX and Overleaf have #[a(href="https://www.sharelatex.com/blog/2017/07/20/sharelatex-joins-overleaf.html") joined forces],
								| so ShareLateX is becoming Overleaf v2.
							p
								| Your account has been migrated to the new #[a(href=settings.accountMerge.betaHost) Overleaf v2]
								| site, you will need to log in to Overleaf v2 to access your
								| projects.

							p.text-center
								a.btn.btn-lg.btn-primary(href=settings.accountMerge.betaHost+"/login/v1") Login to Overleaf v2
