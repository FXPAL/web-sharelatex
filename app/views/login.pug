extends ../../../../app/views/layout

block content
	style.
		.btn-ieee { background-color: #00629b; } .btn-ieee:focus, .btn-ieee:hover { background-color: #005282; } .btn-ieee:active { background-color: #004269; } 
		.btn-google { background-color: #4885ed; } .btn-google:focus, .btn-google:hover { background-color: #3f76d4; } .btn-google:active { background-color: #3868ba; } 
		.btn-twitter { background-color: #1da1f2; } .btn-twitter:focus, .btn-twitter:hover { background-color: #1a90d9; } .btn-twitter:active { background-color: #177fbf; } 
		.btn-orcid { background-color: #a6ce39; } .btn-orcid:focus, .btn-orcid:hover { background-color: #92b533; } .btn-orcid:active { background-color: #7e9c2c; } 
		.btn-sharelatex { background-color: #a93529; } .btn-sharelatex:focus, .btn-sharelatex:hover { background-color: #8f2d22; } .btn-sharelatex:active { background-color: #75251c; } 
	.content.content-alt
		.container
			.row
				.col-md-6.col-md-offset-3
					.card
						.page-header
							h1 Login with Overleaf
						form(async-form="login", name="loginForm", action='/login/v1', method="POST", ng-cloak)
							input(name='_csrf', type='hidden', value=csrfToken)
							form-messages(for="loginForm")
							.form-group
								input.form-control(
									type='email',
									name='email',
									required,
									placeholder='email@example.com',
									ng-model="email",
									ng-model-options="{ updateOn: 'blur' }",
									ng-init="email = "+JSON.stringify(email),
									focus="true"
								)
								span.small.text-primary(ng-show="loginForm.email.$invalid && loginForm.email.$dirty")
									| #{translate("must_be_email_address")}
							.form-group
								input.form-control(
									type='password',
									name='password',
									required,
									placeholder='********',
									ng-model="password"
								)
								span.small.text-primary(ng-show="loginForm.password.$invalid && loginForm.password.$dirty")
									| #{translate("required")}
							.actions
								button.btn-primary.btn(
									type='submit',
									ng-disabled="loginForm.inflight"
								)
									span(ng-show="!loginForm.inflight") #{translate("login")}
									span(ng-show="loginForm.inflight") #{translate("logging_in")}...
								//- a.pull-right(href='/user/password/reset') #{translate("forgot_your_password")}?
							hr
							.page-header
								h3 Login with external services
							.form-group.text-center
								a.btn.btn-default.btn-ieee(
									href="/org/ieee/saml/init"
								) Login with IEEE
							.form-group.text-center
								a.btn.btn-default.btn-google(
									href="/auth/google?intent=sign_in"
								) Login with Google
							.form-group.text-center
								a.btn.btn-default.btn-twitter(
									href="/auth/twitter?intent=sign_in"
								) Login with Twitter
							.form-group.text-center
								a.btn.btn-default.btn-orcid(
									href="/auth/orcid?intent=sign_in"
								) Login with ORCID
							.form-group.text-center
								a.btn.btn-default.btn-sharelatex(
									href=settings.accountMerge.sharelatexHost + "/logout"
								) Login with ShareLaTeX

