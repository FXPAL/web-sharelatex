extends ../layout


block _headLinks
	link(rel='canonical', href='https://www.sharelatex.com')


block content
	if settings.showDeprecatedSLHomepage
		.deprecated-sl-masthead
			.container
				.row
					.col-md-12
						h1 ShareLaTeX is now part of Overleaf
				.row
					.col-md-12
						.screenshot
							.img

		.deprecated-sl-login-buttons
			.container
				.row
					.col-md-12.text-center
						a.btn.btn-primary(href="/login") Login to Overleaf v2 with ShareLateX
				.row
					.col-md-12.text-center
						a.btn.btn-link(href="https://www.overleaf.com") Register for Overleaf v2
	else
		.masthead
			.container
				.row
					.col-md-12
						h1 LaTeX, 
							span #{translate("evolved")}
						p #{translate("the_easy_online_collab_latex_editor")}
				.row
					.col-md-12
						.screenshot
							.img

			.register-banner
				.container
					.row
						.col-md-12
							h2 #{translate("get_started_now")}
						form.form-inline(async-form="register", name="registerForm", action="/register", ng-cloak, captcha)
							input(name='_csrf', type='hidden', value=csrfToken)
							input(name='redir', type='hidden', value=redir)
							form-messages(for="registerForm")
							.form-group
								input.form-control.input-lg(
									type='email',
									name='email',
									placeholder="email@example.com"
									required,
									ng-model="email",
									ng-init="email = "+JSON.stringify(new_email),
									ng-model-options="{ updateOn: 'blur' }"
								)
							.form-group
								input.form-control.input-lg(
									type='password',
									name='password',
									placeholder="********",
									required,
									ng-model="password"
								)

							.form-group
								button.btn-primary.btn.btn-lg.btn-hero(
									type='submit'
									ng-disabled="registerForm.inflight"
								)
									span(ng-show="!registerForm.inflight") #{translate("register")}
									span(ng-show="registerForm.inflight") #{translate("registering")}...
									
							.form-group
								label.checkbox-inline
									input(type='checkbox', 
										id="newslettercheckbox",
										name="subscribeToNewsletter",
										ng-model="subscribeToNewsletter",
										value="true")
									| I’d like emails about product offers and company news and events.

	if settings.showDeprecatedSLHomepage
		.deprecated-sl-long-cta.content-alt
			.container
				.row
					.col-md-6
						.card
							h3 If you're an existing ShareLaTeX user
							p
								| Please log in to ShareLaTeX, and your account will be transferred
								| to Overleaf, where your data and projects can be accessed.
							p
								| If you’ve already linked your ShareLaTeX account to Overleaf,
								| please log in with Overleaf from now on.
					.col-md-6
						.card
							h3 If you're a new user
							p
								| Please sign up to Overleaf. If you’ve been invited to a ShareLaTeX
								| project, then you can still do this seamlessly through Overleaf.
							p
								| If you’re looking for an online LaTeX editor, then Overleaf will
								| be what you need. It’s based on the ShareLaTeX editor, but with
								| some extra features!

	.pattern-container
		.container
			.long-form-features
				.row
					script(type="text/javascript").
						var frames = [{
							before: "",
							time: 1000
						}, {
							before: "i",
							time: 100
						}, {
							before: "in",
							time: 200
						}, {
							before: "in ",
							time: 300
						}, {
							before: "in r",
							time: 100
						}, {
							before: "in re",
							time: 200
						}, {
							before: "in rea",
							time: 100
						}, {
							before: "in real",
							time: 200
						}, {
							before: "in real ",
							time: 400
						}, {
							before: "in real t",
							time: 200
						}, {
							before: "in real ti",
							time: 100
						}, {
							before: "in real tim",
							time: 200
						}, {
							before: "in real time",
							time: 2000
						}];
						var index = 0;
						function nextFrame() {
							var frame = frames[index];
							index = index + 1;
							if (index >= frames.length) {
								index = 0;
							}
							$(".real-time-example").html(frame.before + "<div class='cursor'>|</div>");
							setTimeout(nextFrame, frame.time);
						}
						nextFrame();
						
					.col-md-6
						.card.row-spaced
							.row
								.col-md-3.col-xs-2.text-center
									i.fa.fa-group.fa-4x
								.col-md-9.col-xs-10
									h2.h1 #{translate("collaboration")}
									p #{translate("work_on_single_version")} 
									p #{translate("view_collab_edits")} 
										span.real-time-example
										
					.col-md-6
						.card.row-spaced
							.row
								.col-md-3.col-md-push-9.col-xs-2.text-center
									i.fa.fa-thumbs-up.fa-4x
								.col-md-9.col-md-pull-3.col-xs-10
									h2.h1 #{translate("ease_of_use")}
									p #{translate("no_complicated_latex_install")}
									p !{translate("all_packages_and_templates", {templatesLink:"<a href='templates'>" + translate("templates") + "</a>"})}

				.row
					.col-md-6
						.card.row-spaced
							.row
								.col-md-3.col-xs-2.text-center
									i.fa.fa-history.fa-4x
								.col-md-9.col-xs-10
									h2.h1 #{translate("document_history")}
									p.track-changes-example #{translate("see_what_has_been")}
										span.added #{translate("added")}
										|  #{translate("and")} 
										span.removed #{translate("removed")}
									p #{translate("restore_to_any_older_version")}

					.col-md-6
						.card.row-spaced
							.row
								.col-md-3.col-md-push-9.col-xs-2.text-center
									i.fa.fa-globe.fa-4x
								.col-md-9.col-md-pull-3.col-xs-10
									h2.h1 #{translate("work_from_anywhere")}
									p #{translate("acces_work_from_anywhere")}
									p #{translate("work_offline_and_sync_with_dropbox")}

			if !settings.showDeprecatedSLHomepage
				.row.row-spaced
					.col-md-12
						p.text-center
							a(href="/user/subscription/plans").btn.btn-primary.btn-lg #{translate("sign_up_now")}!

				.row-spaced

	.content.content-alt
		.container
			.card
				.page-header
					h2 #{translate("ease_of_use")}
				
				.row.row-spaced
					.col-md-12
						.col-md-4.pull-right
							.alert.alert-info 
								p !{translate("over_x_templates_easy_getting_started", {templates: translate("templates"), over: translate("over")})}

								p.text-center
									a(href="/templates").btn.btn-info #{translate("view_templates")}
							p &nbsp;
						p !{translate("nothing_to_install_ready_to_go", {start_now:"<strong>" + translate("start_using_latex_now") + "</strong>"})}

						p #{translate("get_same_latex_setup")}
						p !{translate("support_lots_of_features", {help_guides_link:"<a href='/learn'>" + translate("latex_guides") + "</a>"})}.
					.col-md-6
					
			.card.row-spaced
				.page-header
					h2 #{translate("collaboration")}
				
				.row.row-spaced
					.col-md-12
						blockquote 
							p Waiting for changes to be emailed back before carrying on wastes a huge amount of time. 
								strong The ability to track changes and the real-time collaborative nature is what sets ShareLaTeX apart.
							footer Professor Erdogmus, Northeastern University.
							
				.row
					.col-md-8
						p
							| #{translate("single_version_easy_collab_blurb")}
						p
							| #{translate("can_see_collabs_type_blurb")}
					.col-md-4
						.real-time-example-code
							span.highlight \begin
							| {document}
							br
							br
							| #{translate("work_directly_with_collabs")} 
							span.real-time-example
							br
							br
							span.highlight \end
							| {document}
							
				h3 #{translate("work_with_word_users")}
				.row
					.col-md-12
						p #{translate("work_with_word_users_blurb")}
				
			.card.row-spaced
				.page-header
					h2 #{translate("document_history")}
				
				.row.row-spaced
					.col-md-4
						.real-time-example-code.track-changes-example
							span.highlight \begin
							| {document}
							br
							br
							| #{translate("view_which_changes")} 
							span.added #{translate("added")}
							|  #{translate("and")} 
							span.removed #{translate("removed")}
							| .
							br
							br
							span.highlight \end
							| {document}
					.col-md-8
						p #{translate("sl_included_history_of_changes_blurb")}
						p #{translate("can_revert_back_blurb")}

			if !settings.showDeprecatedSLHomepage
				.row.row-spaced.text-center
					a(href="/user/subscription/plans").btn.btn-primary.btn-lg #{translate("start_using_sl_now")}

				.row-spaced

	script(src=buildJsPath("libs/jquery.slides.min.js", {fingerprint:false}))
	script(type="text/javascript").
		$(function() {
			$('#slides').slidesjs({
				height: 80,
				play: {
					active: false,
					auto: true,
					interval: 5000
				},
				navigation: {
					active: false
				},
				pagination: {
					active: false
				}
			});
		});
