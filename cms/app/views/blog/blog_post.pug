extends ../layout

//- Page for a single blog post

block content_cms
	.page-header
		h1
			a(href="/blog") Blog
	.blog(ng-cloak)
		ul.blog-list
			li.card
				.card-header
					h2 #{title}
				if (authorDisplay || publishDateDay)
					small Posted
						if (authorDisplay)
							|  by #{authorDisplay}
						if (publishDatePretty)
							|  on #{publishDatePretty}
				| !{content}