extends  ../layout

//- Page for about

block content_cms
	.row
		.col-xs-12
			.page-header
				h1 #{data.title}
				div !{data.about}

	for list in data.teamLists
		.row
			.col-sm-12
				h2 #{list.fields.header}
				ul.team
					for member in list.fields.team
						li.team-member
							if member.fields.picture
								img(src=member.fields.picture.fields.file.url class="img-circle team-pic" width="100" alt=member.fields.picture.fields.description || member.fields.firstName)
							div.team-info
								h3 #{member.fields.firstName} #{member.fields.lastName}
								if member.fields.title
									h4 #{member.fields.title}
								if member.fields.about
									span #{member.fields.about}
								ul.team-connect
									if (member.fields.twitterHandle)
										li
											a(href="https://twitter.com/"+member.fields.twitterHandle target="_BLANK" rel="nofollow" aria-label="Twitter")
												i(class="fa fa-twitter" aria-hidden="true")
												.sr-only Opens in new window
									if (member.fields.linkedInUrl)
										li
											a(href=member.fields.linkedInUrl target="_BLANK" rel="nofollow" aria-label="LinkedIn")
												i(class="fa fa-linkedin" aria-hidden="true")
												.sr-only Opens in new window
									if (member.fields.email)
										li
											a(href="mailto:"+member.fields.email aria-label="Email")
												i(class="fa fa-envelope" aria-hidden="true")
												.sr-only Email opens mail client