mixin doc_rows(docs)
	.row.row-spaced
		.col-sm-12
			.templates-container
				each doc in docs
					.template-thumbnail
						a(href=doc.path)
							img.thumbnail(src=doc.image_url alt=doc.title)
							.caption__title #{doc.title}
						div.caption
							div.caption__description=doc.description
							//- sanitized by api
							div!= doc.author

mixin pagination(pages)
	ul.pagination
		each page in pages
			if page.active
				li
					span.active #{page.text}
			else
				li
					if page.rel
						a(href=page.href rel=page.rel) #{page.text}
					else
						a(href=page.href) #{page.text}
