form.search__container--addsearch(addsearch)
  .search__input-bar
    label.sr-only(for="search") Search
    input#search.addsearch.form-control.search__input(
      type="text",
      placeholder!="Search&hellip;"
    )
    button.btn.btn-primary(type="submit") Search
  #addsearch-results

block scripts
  script(
    type="text/javascript",
    defer,
    src="http://addsearch.com/js/?key="+settings.addsearch.key+"&type=resultpage"
  )
